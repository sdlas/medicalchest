button::after{
  border: none
}
.container{
  width:100%;
  display: flex;
  flex-direction:column;
  justify-content: flex-start;
  align-items:center;
}
.planbox{
  margin-top:10px;
  width:90%;
  border:1px solid  rgb(226, 226, 226);
  box-shadow:rgb(226, 226, 226) 0rpx 0rpx 30rpx 0rpx;
  border-radius:2px;
}
.time{
  height:20px;
  width:100%;
  text-align:center;
  font-size:12px;
  line-height: 20px;
  color:rgb(109, 109, 109);
  margin-bottom: 10px;
}
.numbox{
  height:20px;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  width:100%;
  color:rgb(109, 109, 109);
}
.name{
  height:20px;
  width:40%;
  text-align:center;
  font-size:12px;
  line-height: 20px;
  color:rgb(109, 109, 109);
}
.num{
  height:20px;
  width:30%;
  text-align:center;
  font-size:12px;
  line-height: 20px;
  color:rgb(109, 109, 109);
}
.type{
  height:20px;
  width:30%;
  text-align:center;
  font-size:12px;
  line-height: 20px;
  color:rgb(109, 109, 109);
}
.method{
  margin-top:10px;
  height:20px;
  width:100%;
  text-align:center;
  font-size:12px;
  line-height: 20px;
  color:rgb(109, 109, 109);
}
.shopcarbtn{
  position: fixed;
  top:85vh;
  right:60rpx;
  height:90rpx;
  width:90rpx;
  border-radius:90rpx;
  background: #FFFFFF;
  border:1px solid rgb(241, 241, 241);
  box-shadow: 0px 4px 10px #0000001A;
}
.shopcarimage{
  text-align: center;
  line-height:90rpx;
  font-size:20px;
  color:rgb(109, 109, 109);
  height:90rpx;
  width:90rpx;
  border-radius:90rpx;
}

.formbox{
  position:fixed;
  bottom:0;
  left:0;
  height:900rpx;
  width:100%;
  background-color:#FFFFFF;
  border-radius:30rpx 30rpx 0 0; 
}
.formcontainer{
  width:100%;
  display:flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}
.title{
  height:100rpx;
  width:100%;
  font-size:40rpx;
  text-align:center;
  line-height:100rpx;
  color:#4A4E63;
  font-weight: 300;
}
.choosebox{
  height:100rpx;
  width:100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.choosetitle{
  box-sizing: border-box;
  height:100rpx;
  width:50%;
  font-size:35rpx;
  color:#4A4E63;
  line-height:100rpx;
  padding-left:50rpx;
}
.choosecontent{
  box-sizing: border-box;
  height:100rpx;
  width:50%;
  font-size:35rpx;
  color:#4A4E63;
  line-height:100rpx;
  padding-right:50rpx;
  text-align:right;
}
.planboard{
  width:90%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items:center;
  border:2rpx solid rgb(179, 179, 179);
  border-radius:5rpx;
}
.planitem{
  width:100%;
  height:60rpx;
  display: flex;
  flex-direction:row;
  justify-content: flex-start;
  align-items:center;
  font-size:32rpx;
  color:#4A4E63;
  line-height: 60rpx;
}
.planitemname{
  width:34%;
  height:100rpx;
  text-align: center;
}
.planitemnum{
  width:33%;
  height:100rpx;
  text-align: center;
}
.planitemmethod{
  width:33%;
  height:100rpx;
  text-align: center;
}


.edititem{
  width:100%;
  height:100rpx;
  display: flex;
  flex-direction:row;
  justify-content: flex-start;
  align-items:center;
  font-size:32rpx;
  color:#4A4E63;
  line-height: 60rpx;
}
.edititemname{
  width:34%;
  height:100rpx;
  line-height: 100rpx;
  text-align: center;
}
.edititemnum{
  width:33%;
  height:100rpx;
  line-height: 100rpx;
  text-align: center;
}
.edititemmethod{
  width:33%;
  height:100rpx;
  line-height: 100rpx;
  text-align: center;
}
.confirmbtn{
  margin-top:100rpx;
  height:80rpx;
  width:400rpx;
  text-align: center;
  line-height:80rpx;
  font-size: 40rpx;
  background: #FAFAFA;
  color:#4A4E63;
  border:1px solid rgb(201, 201, 201);
  border-radius:10rpx;
}